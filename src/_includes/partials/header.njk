<style>
    /* Header */
    header {
        border-bottom: 1px dashed var(--accent);
    }
    .home {
        display: flex;
        align-items: center;
        font-size: 32px;
    }

    .home img {
        width: 2em;
        height: 2em;
    }

    .home :link:not(:hover) {
        text-decoration: none;
    }

    /* Nav */
    nav {
        overflow: auto;
        font-family: Heebo;
        display: flex;
        justify-content: space-between;
    }

    .navbar, .links {
        display: flex;
        align-items: center;
        padding: 0;
    }

    .nav-item {
        display: inline-block;
        margin-right: 1rem;
        font-size: 18px;
    }

    .nav-item a {
    color: var(--primary-text);
    text-decoration: none;
    }

    .nav-item:hover {
    text-decoration: underline;
    }

    .nav-item-active {
        font-weight: 700;
        text-decoration: underline;
    }

    .links li {
        margin-left: 1rem;
    list-style: none;
    }

    .github {
        background-color: var(--github);
    }
</style>
<nav class="container">
    <ul class="navbar">
        <li class="nav-item">
            <a href="{{ '/' | url }}" class="home">
                <img src="{{ "/assets/img/icon.svg" | url }}" alt="Logo">
                    {{ metadata.title }}
                </a>
            </li>
            {%- for entry in collections.all | eleventyNavigation %}
                <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
                    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                </li>
            {%- endfor %}
        </ul>
        <ul class="links">
            <li>
                <a class="button" href="{{ '/download/' | url }}">Download</a>
            </li>
            <li>
                <a class="github button" href="https://github.com/PolyMC/PolyMC">Github</a>
            </li>
        </ul>
    </ul>
</nav>
