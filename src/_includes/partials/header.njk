<header>
  <nav class="container">
    <div class="navbar">
        <a href="{{ '/' | url }}" class="home">
          <img src="{{ "/assets/img/icon.svg" | url }}" alt="Logo">
          {{ metadata.title }}
        </a>
      <ul class="nav">
        {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        </li>
      {%- endfor %}
      </ul>
    </div>
    <ul class="links">
      <li>
        <a class="button" href="{{ '/download/' | url }}">Download</a>
      </li>
      <li>
        <a class="button secondary" href="https://github.com/PolyMC/PolyMC">GitHub</a>
      </li>
    </ul>
  </nav>
  {% if hero %}
  <div class="hero">
    <div class="container">
      <div class="row">
        <div class="column">
          <div class="center">
            <h1 class="hero-title">{{ hero.title }}</h1>
            <p class="subtitle">{{ hero.description }}</p>
            {%- if hero.download == true %}
            <br>
            <a class="button" href="{{ '/download' | url }}">Download Now</a>
            {%- endif %}
          </div>
        </div>
        {%- if hero.image %}
        <picture class="column">
          <source srcset="{{ hero.image.light | url }}" media="(prefers-color-scheme: light)">
          <img class="hero-image" src="{{ hero.image.dark | url }}" alt="Hero Image">
        </picture>
        {%- endif %}
      </div>
    </div>
  </div>
  {% endif %}
</header>